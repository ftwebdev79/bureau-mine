{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block main %}
    {% include('partials/_headerHome.html.twig') %}
    <div class="blocCat">
        <div class="blocCategory">
            <p><strong>Filtres :</strong></p>
            {% for article in articles | slice(0, 1) %}
                 {% for category in article.categories %}
                    <a href="{{ path('app_category_detail', { 'id': category.id }) }}">{{ category.name }}</a>
                     {% if not loop.last %}|{% endif %}
                {% endfor %}
            {% endfor %}
        </div>
    </div>

    <div class="container">
        <div class="row"
             data-masonry='{"percentPosition": true }'>
            {% for article in articles %}
                {% include 'partials/_card.html.twig' %}
            {% endfor %}
        </div>
    </div>

{% endblock %}
