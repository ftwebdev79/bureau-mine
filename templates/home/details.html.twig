{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block main %}

    {% include('partials/_headerDetail.html.twig') %}
    <div class="positionContainerDetail">
        <div class="wrapper">
            <div class="slider-wrap">
                <div class="swiper-container" data-controller="carousel">
                    <div class="swiper-wrapper">
                        {% for attachment in article.attachments %}
                            <div class="imgTest swiper-slide">
                                <img class="imgDetailcover" src="{{ asset( 'build/images/' ~ attachment.image) }}"
                                     alt="">
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>


            <div class="article">

                <div class="blocBlanc">
                    <p><strong>Clients :</strong></p>
                    <p>{{ article.title }}</p>

                    <p class="detailTitre"><strong>Date :</strong></p>
                    <p>{{ article.createdAt | date("d M", "Europe/Paris") }}</p>

                    <p class="detailTitre"><strong>Cat√©gorie(s) :</strong></p>
                    {% for category in article.categories %}
                        <p class="categoryDetail">{{ category.name }}</p>
                    {% endfor %}
                </div>

                <h1 class="titleDetail">{{ article.title }}</h1>

                <div class="textDetail">
                    {{ article.description | nl2br }}
                </div>

                <div class="pageSuivante">
                    <a href="{{ path('app_home_details', { 'id' : article.id + 1  }) }}">
                        <p><strong>Projet Suivant</strong></p>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
